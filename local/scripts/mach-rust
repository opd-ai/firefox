# Wrapper for mach that applies overlays first
# Usage: ./local/scripts/mach-rust <mach-command>

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/../.." && pwd)"

cd "$REPO_ROOT"

# Enable Rust Dafsa
export MOZ_RUST_DAFSA=1

# Apply overlays
source local/scripts/apply-build-overlays.sh

# Run mach with all arguments
exec ./mach "$@"
